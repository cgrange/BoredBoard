<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid
                android:color="@color/btn_pressed" />
            <stroke
                android:width="0dp"
                android:color="@null" />
            <corners
                android:radius="4dp" />
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape>
            <solid
                android:color="@color/btn_unpressed" />
            <stroke
                android:width="0dp"
                android:color="@null" />
            <corners
                android:radius="4dp" />
        </shape>
    </item>
    <!--<item android:state_pressed="false" android:drawable="@color/btn_unpressed"/>
    <item android:state_pressed="true" android:drawable="@color/btn_pressed"/>-->
</selector>